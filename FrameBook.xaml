<UserControl x:Class="YishilNotaOCR.FrameBook"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#EEE" BorderThickness="0,0,0,1">
            <DockPanel LastChildFill="True" Margin="10,0">

                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                    <materialDesign:PackIcon Kind="BookOpenPageVariant" Foreground="#4CAF50" VerticalAlignment="Center" Width="20" Height="20"/>
                    <TextBlock Text="Kitap Link" Margin="8,0,15,0" VerticalAlignment="Center" FontWeight="Bold" FontSize="14" Foreground="#333"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Button Click="ZoomOut_Click" ToolTip="كچىكلىتىش" Style="{StaticResource MaterialDesignToolButton}" Width="35" Height="35">
                        <materialDesign:PackIcon Kind="MagnifyMinusOutline" Width="20" Height="20"/>
                    </Button>
                    <Button Click="ZoomIn_Click" ToolTip="چوڭايتىش" Style="{StaticResource MaterialDesignToolButton}" Width="35" Height="35">
                        <materialDesign:PackIcon Kind="MagnifyPlusOutline" Width="20" Height="20"/>
                    </Button>
                </StackPanel>

                <Grid VerticalAlignment="Center">
                    <TextBox x:Name="txtUrl" 
                             Text="https://openlibrary.org/"
                             Height="32" 
                             VerticalContentAlignment="Center"
                             Padding="10,0,35,0"
                             materialDesign:TextFieldAssist.TextFieldCornerRadius="16"
                             materialDesign:HintAssist.Hint="تور ئادرېسىنى كىرگۈزۈڭ..."
                             Style="{StaticResource MaterialDesignOutlinedTextBox}"
                             KeyDown="TxtUrl_KeyDown"/>

                    <Button HorizontalAlignment="Right" 
                            Click="BtnGo_Click"
                            Style="{StaticResource MaterialDesignToolButton}" 
                            Width="30" Height="30" Margin="0,0,2,0">
                        <materialDesign:PackIcon Kind="ArrowRightCircle" Foreground="#4CAF50" Width="18" Height="18"/>
                    </Button>
                </Grid>

            </DockPanel>
        </Border>

        <wv2:WebView2 x:Name="Web" Grid.Row="1"/>
    </Grid>
</UserControl>