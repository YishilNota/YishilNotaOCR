


<Window x:Class="YishilNotaOCR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:shell="clr-namespace:System.Windows.Shell;assembly=PresentationFramework"
        Height="650" Width="1100"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="NavigationItemStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="8,2"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListViewItem">
                        <Border x:Name="border" 
                                CornerRadius="8" 
                                Background="{TemplateBinding Background}"
                                SnapsToDevicePixels="True">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E8F5E9"/>
                                <Setter Property="Foreground" Value="#2E7D32"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      CornerRadius="12" 
                      GlassFrameThickness="0" 
                      ResizeBorderThickness="8" />
    </WindowChrome.WindowChrome>
    
    <materialDesign:DialogHost Identifier="RootDialog">




        <Border x:Name="MainBorder" 
            Margin="10" 
            CornerRadius="12" 
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="2" Opacity="0.15"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="1" 
                    Background="#F9FAFB" 
                    CornerRadius="0,12,12,0" 
                    BorderBrush="#F0F0F0" 
                    BorderThickness="1,0,0,0">
                    <Grid FlowDirection="RightToLeft">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="24,0" 
            Cursor="Hand" MouseDown="Logo_MouseDown" Background="Transparent">
                            <materialDesign:PackIcon Kind="Leaf" Foreground="#4CAF50" Width="28" Height="28"/>
                            <TextBlock Text="يېشىل نوتا" 
               Margin="12,0" 
               FontSize="20" 
               FontWeight="Bold" 
               VerticalAlignment="Center"
               Foreground="#2C2C2C"/>
                        </StackPanel>

                        <ListView x:Name="ListViewMenu" 
                              Grid.Row="1"
                              ItemContainerStyle="{StaticResource NavigationItemStyle}"
                              SelectionChanged="ListView_SelectionChanged"
                              BorderThickness="0"
                              Margin="6 0 0 0"
                              Background="Transparent">

                            <ListViewItem Margin="0 0 0 6">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Ocr" Width="20" Height="20" VerticalAlignment="Center"/>
                                    <TextBlock Text="OCR" Margin="16,0" VerticalAlignment="Center" FontSize="18"/>
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem Margin="0 0 0 6">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FilePdfBox" Width="20" Height="20" VerticalAlignment="Center"/>
                                    <TextBlock Text="PDF-OCR" Margin="16,0" VerticalAlignment="Center" FontSize="18"/>
                                </StackPanel>
                            </ListViewItem>

                            <ListViewItem Margin="0 0 0 6">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="BookOpenPageVariant" Width="20" Height="20" VerticalAlignment="Center"/>
                                    <TextBlock Text="كىتابلار" Margin="16,0" VerticalAlignment="Center" FontSize="18"/>
                                </StackPanel>
                            </ListViewItem>
                        </ListView>

                        <TextBlock Grid.Row="2" Text="v1.0.0" Foreground="#BDBDBD" Margin="20" FontSize="10"/>
                    </Grid>
                </Border>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Background="Transparent">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="16,0">
                            <TextBlock Text="YishilNota Qoralliri" 
                                   VerticalAlignment="Center"
                                   FontSize="12"
                                   Foreground="#9E9E9E"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" WindowChrome.IsHitTestVisibleInChrome="True">
                            <Button Style="{StaticResource MaterialDesignFlatButton}" 
                                Foreground="#757575" Width="40" Padding="0"
                                Click="btnMinimize_Click" Cursor="Hand">
                                <materialDesign:PackIcon Kind="WindowMinimize" Width="18"/>
                            </Button>
                            <Button x:Name="btnClose" 
                                Style="{StaticResource MaterialDesignFlatButton}" 
                                Foreground="#757575" Width="40" Padding="0"
                                Click="btnClose_Click">
                                <materialDesign:PackIcon Kind="Close" Width="18"/>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="1" Background="White" Margin="10,0,10,10" CornerRadius="8">
                        <Grid x:Name="GridContent">
                            <TextBlock Text="مەزمۇن رايونى" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#E0E0E0" FontSize="24"/>
                        </Grid>
                    </Border>
                </Grid>
            </Grid>
        </Border>
    </materialDesign:DialogHost>
</Window>